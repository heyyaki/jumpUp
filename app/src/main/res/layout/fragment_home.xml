<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.com.jumpupbitcoin.ga.example.com.jumpupbitcoin.priceInfo.HomeFragment">

    <LinearLayout
        android:id="@+id/homefragment_listview_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextClock
            android:id="@+id/textClock"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#444444"
            android:format12Hour="hh:mm:ss a"
            android:gravity="center"
            android:textColor="#ffffff"
            android:textSize="16dp" />

        <ListView
            android:id="@+id/price_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="56dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/homefragment_no_item_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone">

        <TextView
            style="@style/title_text"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="아이템을 불러오는 중입니다.." />
    </LinearLayout>

</FrameLayout>
