<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="46dp">

    <ImageView
        android:id="@+id/image_coin_down2"
        style="@style/list_coin_image"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true" />

    <TextView
        android:id="@+id/name_coin_down_txt2"
        style="@style/list_coin_name"
        android:layout_toEndOf="@+id/image_coin_down2" />

    <TextView
        android:id="@+id/date_coin_down_txt2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="18dp"
        android:textSize="12dp" />

    <TextView
        android:id="@+id/price_coin_down_txt2"
        style="@style/list_coin_price"
        android:layout_toStartOf="@+id/up_per_down_txt2"
        android:textColor="@color/blue" />

    <TextView
        android:id="@+id/up_per_down_txt2"
        style="@style/list_coin_per"
        android:layout_alignParentEnd="true"
        android:textColor="@color/blue" />
</RelativeLayout>
