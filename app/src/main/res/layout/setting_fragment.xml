<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/basic_background"
    tools:context="ga.zua.coin.jumpupbitcoin.setting.SettingFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            style="@style/setting_item_backgroud"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                style="@style/title_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="전체 설정" />

            <LinearLayout
                android:id="@+id/vibrate_setting"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Switch
                    android:id="@+id/vibrate_setting_switch"
                    style="@style/sub_title_text"
                    android:text="진동 설정" />
            </LinearLayout>
        </LinearLayout>

        <include
            android:id="@+id/up_setting"
            layout="@layout/setting_cardview" />

        <include
            android:id="@+id/down_setting"
            layout="@layout/setting_cardview" />

    </LinearLayout>
</ScrollView>