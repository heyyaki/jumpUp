<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="45dp">

    <ImageView
        android:id="@+id/image_coin1"
        style="@style/list_coin_image"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true" />

    <TextView
        android:id="@+id/name_coin_txt"
        style="@style/list_coin_name"
        android:layout_toEndOf="@+id/image_coin1" />

    <TextView
        android:id="@+id/k_premeum_txt"
        style="@style/k_premeum_txt"/>

    <TextView
        android:id="@+id/price_coin_txt"
        style="@style/list_coin_price"
        android:layout_toStartOf="@+id/start_per_txt" />

    <TextView
        android:id="@+id/start_per_txt"
        style="@style/list_coin_per"
        android:layout_toStartOf="@+id/trade_price_txt"  />

    <TextView
        android:id="@+id/trade_price_txt"
        style="@style/trade_price_txt"
        android:layout_alignParentEnd="true" />
</RelativeLayout>
