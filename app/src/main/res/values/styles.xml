<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/textColor</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="title_text">
        <item name="android:textColor">@color/title_selector</item>
        <item name="android:textSize">18dp</item>
        <item name="android:gravity">start|center_horizontal</item>
        <item name="android:padding">@dimen/setting_item_padding</item>
    </style>

    <style name="sub_title_text">
        <item name="android:textColor">@color/sub_title_selector</item>
        <item name="android:textSize">16dp</item>
        <item name="android:gravity">start|center_horizontal</item>
        <item name="android:padding">@dimen/setting_item_padding</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="description_text">
        <item name="android:textColor">@color/description_selector</item>
        <item name="android:textSize">14dp</item>
        <item name="android:gravity">start|center_horizontal</item>
        <item name="android:padding">@dimen/setting_item_padding</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentStart">true</item>
    </style>

    <style name="setting_edittext">
        <item name="android:layout_width">80dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16dp</item>
        <item name="android:inputType">numberDecimal</item>
        <item name="android:gravity">end</item>
    </style>

    <style name="setting_spinner">
        <item name="android:layout_width">35dp</item>
        <item name="android:layout_height">35dp</item>
        <item name="android:layout_alignParentEnd">true</item>
        <item name="android:background">@drawable/s_way1</item>
        <item name="android:backgroundTint">@color/spinner_selector</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:paddingStart">30dp</item>
        <item name="android:paddingEnd">30dp</item>
        <item name="android:layout_centerInParent">true</item>
    </style>

    <style name="basic_background">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginBottom">56dp</item>
        <item name="android:background">#DDDDDD</item>
    </style>

    <style name="setting_item_backgroud">
        <item name="android:background">@drawable/layout_boundary</item>
        <item name="android:layout_margin">@dimen/setting_item_margin</item>
        <item name="android:padding">@dimen/setting_item_padding</item>
    </style>

    <style name="setting_divider">
        <item name="android:background">#d3d3d3</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:layout_margin">@dimen/setting_item_margin</item>
    </style>

    <style name="home_list_header_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">#252525</item>
        <item name="android:textSize">16dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="list_coin_image">
        <item name="android:layout_width">30dp</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:layout_marginStart">16dp</item>
    </style>

    <style name="list_coin_name">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginStart">@dimen/setting_item_margin</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">@color/textColor</item>
        <item name="android:textSize">14dp</item>
    </style>

    <style name="list_coin_price">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:textColor">@color/textColor</item>
        <item name="android:textSize">14dp</item>
    </style>

    <style name="list_coin_per">
        <item name="android:layout_width">50dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center_vertical|right</item>
        <item name="android:textColor">@color/textColor</item>
        <item name="android:textSize">14dp</item>
        <item name="android:layout_marginEnd">1dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:layout_marginStart">8dp</item>
    </style>

    <style name="trade_price_txt">
        <item name="android:layout_width">75dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center_vertical|right</item>
        <item name="android:textColor">@color/textColor</item>
        <item name="android:textSize">13dp</item>
        <item name="android:layout_marginEnd">8dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:layout_marginStart">1dp</item>
    </style>

    <style name="k_premeum_txt">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_alignParentEnd">true</item>
        <item name="android:layout_marginEnd">10dp</item>
        <item name="android:textSize">12dp</item>
    </style>

    <style name="setting_seekbar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">12dp</item>
        <item name="bsb_max">0</item>
        <item name="bsb_min">20</item>
        <item name="bsb_section_count">7</item>
        <item name="bsb_section_text_position">bottom_sides</item>
        <item name="bsb_show_progress_in_float">true</item>
        <item name="bsb_show_section_text">true</item>
        <item name="bsb_show_section_mark">true</item>
        <item name="bsb_show_thumb_text">true</item>
        <item name="bsb_track_size">2dp</item>
        <item name="bsb_second_track_size">2dp</item>
        <item name="bsb_thumb_radius">6dp</item>
        <item name="bsb_thumb_radius_on_dragging">8dp</item>
    </style>

    <style name="SplashTheme" parent="@android:style/Theme.Light.NoTitleBar">
        <item name="android:windowBackground">@drawable/background</item>
    </style>
</resources>

